@model innovation4austria.web.Models.CreateEmployeModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "innovation4austria - Mitarbeiter anlegen";
}
@using (Html.BeginForm("CreateEmploye", "Company", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.HiddenFor(x => x.CompanyID)

    <div class="container">
        <div class="row">
            <h3 class="col-xs-12">Mitarbeiter anlegen</h3>
        </div>
        <div class="row">
            <div class="col-md-2 col-sm-3 col-xs-3">
                @Html.LabelFor(x => x.Email)
            </div>
            <div class="col-md-3 col-sm-5 col-xs-9">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col-sm-3 col-xs-3">
                @Html.LabelFor(x => x.Firstname)
            </div>
            <div class="col-md-3 col-sm-5 col-xs-9">
                @Html.TextBoxFor(x => x.Firstname, new { placeholder = "Vorname", @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Firstname)
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col-sm-3 col-xs-3">
                @Html.LabelFor(x => x.Lastname)
            </div>
            <div class="col-md-3 col-sm-5 col-xs-9">
                @Html.TextBoxFor(x => x.Lastname, new { placeholder = "Nachname", @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Lastname)
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col-sm-3 col-xs-3">
                @Html.LabelFor(x => x.NewPassword)
            </div>
            <div class="col-md-3 col-sm-5 col-xs-9">
                @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.NewPassword)
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col-sm-3 col-xs-3">
                @Html.LabelFor(x => x.Pass2)
            </div>
            <div class="col-md-3 col-sm-5 col-xs-9">
                @Html.PasswordFor(x => x.Pass2, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Pass2)
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 col-sm-7 col-xs-12 text-center">
                <button type="submit" class="btn btn-primary btn-lg">Anlegen</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-5 col-sm-7 col-xs-12 text-center">
                @Html.ActionLink("Zurück zur Firma", "Detail", "Company", new { id = Model.CompanyID }, null)
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}