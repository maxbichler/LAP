@model innovation4austria.web.Models.RoomFilterModel

@{
    ViewBag.Title = "Index";
}



@if (User.IsInRole("admin"))
{
    <div class="container">
        <h2>Alle Räume</h2>
        <table class="table">
            <tr>
                <th>
                    <label>Geb&auml;ude</label>
                </th>
                <th>
                    <label>Beschreibung</label>
                </th>
                <th>
                    <label>Preis</label>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Rooms)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Facility_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.ActionLink("Neuen Raum erstellen", "createroom", new { id = item.ID })|
                        @Html.ActionLink("Details", "roomdetail", new { id = item.ID })|
                        @Html.ActionLink("Löschen", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>
}
else
	{
	      <div class="container">

              <div>
                  Filter
                  @using (Html.BeginForm("Filter", "Room", FormMethod.Post))
                  {
                      @Html.ListBoxFor(x => x.Filter.Furnishings, new SelectList(Model.Filter.Furnishings, "Id", "Description"))
                  }
              </div>

    <h2>Alle Räume</h2>
    <table class="table">
        <tr>
            <th>
                <label>Geb&auml;ude</label>
            </th>
            <th>
                <label>Beschreibung</label>
            </th>
            <th>
                <label>Preis</label>
            </th>
            <th>
                <label>Gebucht</label>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Rooms)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Facility_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Booked)
                </td>
                <td>
                    @Html.ActionLink("Details", "roomdetail", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</div>
	}