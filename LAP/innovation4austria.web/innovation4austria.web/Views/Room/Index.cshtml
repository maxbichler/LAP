@model IEnumerable<innovation4austria.web.Models.RoomModel>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2>Alle Räume</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Facility_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Facility_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Neuen Raum erstellen", "createroom", new { id = item.ID })|
                    <a href="@Url.Action("roomdetail", "room", new { id = item.ID })">Bearbeiten</a>|
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</div>